@model Photo

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Photo Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-4">
        <h2>Photo Form</h2>

        <form action="/Photo/Create" method="post" class="needs-validation" novalidate="true">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Opis"></label>
                <input asp-for="Opis" class="form-control" required="true" />
                <div class="invalid-feedback">Please enter Opis.</div>
            </div>

            <div class="form-group">
                <label asp-for="Autor"></label>
                <input asp-for="Autor" class="form-control" required="true" />
                <div class="invalid-feedback">Please enter Autor.</div>
            </div>

            <div class="form-group">
                <label asp-for="DataPublickacji"></label>
                <input asp-for="DataPublickacji" class="form-control" type="date" required="true" />
                <div class="invalid-feedback">Please enter DataPublickacji.</div>
            </div>

            <div class="form-group">
                <label asp-for="Rozdzielczosc"></label>
                <input asp-for="Rozdzielczosc" class="form-control" required="true" />
                <div class="invalid-feedback">Please enter Rozdzielczosc.</div>
            </div>

            <div class="form-group">
                <label asp-for="Format"></label>
                <input asp-for="Format" class="form-control" required="true" />
                <div class="invalid-feedback">Please enter Format.</div>
            </div>

            <div class="form-group">
                <label asp-for="AparatId"></label>
                <select asp-for="AparatId" asp-items="Model.Aparats" class="form-control" required="true">
                    <option value="">Select Aparat</option>
                </select>
                <div class="invalid-feedback">Please select Aparat.</div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>

</body>
</html>
